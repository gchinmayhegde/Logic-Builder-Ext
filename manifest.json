{
  "manifest_version": 3,
  "name": "Logic Builder Coach",
  "version": "1.1",
  "description": "AI-powered coding logic assistant for beginner programmers on LeetCode, GeeksforGeeks, and HackerRank",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.leetcode.com/*",
    "https://leetcode.cn/*",
    "https://www.geeksforgeeks.org/*",
    "https://geeksforgeeks.org/*",
    "https://www.hackerrank.com/*",
    "https://hackerrank.com/*",
    "https://codeforces.com/*",
    "https://www.codeforces.com/*",
    "https://codechef.com/*",
    "https://www.codechef.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://leetcode.com/problems/*",
        "*://www.leetcode.com/problems/*",
        "*://leetcode.cn/problems/*",
        "*://www.geeksforgeeks.org/problems/*",
        "*://geeksforgeeks.org/problems/*",
        "*://www.geeksforgeeks.org/practice/problems/*",
        "*://www.geeksforgeeks.org/batch/*",
        "*://www.hackerrank.com/challenges/*",
        "*://hackerrank.com/challenges/*",
        "*://www.hackerrank.com/contests/*/challenges/*",
        "*://codeforces.com/problem/*",
        "*://www.codeforces.com/problem/*",
        "*://codeforces.com/contest/*/problem/*",
        "*://codeforces.com/problemset/problem/*",
        "*://www.codechef.com/problems/*",
        "*://codechef.com/problems/*",
        "*://www.codechef.com/*/problems/*"
      ],
      "js": ["logicAssistant.js", "contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Logic Builder Coach"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "styles.css", "logicAssistant.js"],
      "matches": ["<all_urls>"]
    }
  ]
}